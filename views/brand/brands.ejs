<%- include('../layout/navbar') -%>

    <div class="storage">
        <p class="title">Brands</p>
        <button class="add" onclick="add()" id="add"><ion-icon class="icon" name="add"></ion-icon></button>
        <button class="add" onclick="remove()" style="display:none" onclick="hide()" id="remove"><ion-icon class="icon"
                name="remove"></ion-icon></button>
        <br>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr style="display: none;" id="cat-form">
                    <form action="/brand/add" method="post" enctype="multipart/form-data">
                        <td colspan="2"><input type="text" name="name" placeholder="Name" required></td>
                        <td colspan="1"><input type="file" name="image" required></td>
                        <td><button class="btn btn-success">Add</button></td>
                    </form>
                </tr>
                <% for (let i=0; i < brand.length; i++) {%>
                    <tr>
                        <td>
                            <img style="width: 50px;" src="/upload/images/<%= brand[i].image%>" alt="image">
                        </td>
                        <td>
                            <%= brand[i].name%>
                        </td>
                        <td><button class="btn btn-success" onclick="window.location.href='/brand/edit/<%= brand[i].id%>'">Edit</button></td>
                        <form action="/brand/delete/<%= brand[i].id%>?_method=DELETE" method="post">
                        <td><button class="btn btn-danger">Delete</button></td>
                        </form>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>

    <script src="/javascript/category.js"></script>
    <%- include('../layout/footer') -%>