<%- include("../layout/navbar") -%>

<div class="sell-dashboard">
    <p class="title">Orders history</p>
    <div class="sell-cards">
        <% orders.forEach(data => {%>
            <div class="sell-card" onclick="window.location.href='/localstore/orders/get-data/<%=data.id%>'">
                <div class="flex">
                    <% if(data.isShop == true){%>
                        <p class="icon" style="color: #665CC4;"><ion-icon name="folder"></ion-icon></p>
                    <%} else {%>
                        <p class="icon"><ion-icon name="folder"></ion-icon></p>
                        <%} %>
                    <div class="details">
                        <p><%= data.Date%></p>
                        <p><%= data.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> IQD</p>
                        <p><%= data.adress%></p>
                    </div>
                    <% if(data.status == "pending"){%>
                        <p class="status">Pending</p>
                    <%} %>
                </div>
            </div>
        <%}) %>
    </div>
    <br>
    <br>
    <br>
</div>
<%- include("../layout/footer") -%>