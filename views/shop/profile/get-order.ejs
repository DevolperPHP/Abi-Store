<%- include('../layout/navbar') -%>
HIDDEN
<div class="cart">
        <p class="title">Order #<%= data.bid%></p>
        <div class="order-info">
            <p>Name: <span><%= data.name%></span></p>
            <p>Phone: <span><%= data.phone%></span></p>
            <p>City: <span><%= data.adress%></span></p>

        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Color</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
            </thead>

            <tbody>
                <% for (let i = 0; i < data.products.length; i++) {%>
                    <tr>
                        <td><%= i+1%></td>
                        <td><img src="/upload/images/<%= data.products[i].image%>" alt=""></td>
                        <td><%= data.products[i].name%></td>
                        <td><div class="circle" style="background-color: <%= data.products[i].color%>"></div></td>
                        <td><%= data.products[i].size%></td>
                        <td class="price"><%= data.products[i].sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> <span>IQD</span></td>
                        <td><%= data.products[i].qty%></td>
                        <td class="price"><%= (data.products[i].qty * data.products[i].sell_price).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%></td>
                    </tr>
                <% } %>
                <tr>
                    <td colspan="9" class="total"><%= total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> <span>IQD</span></td>
                </tr>
            </tbody>
        </table>
</div>




