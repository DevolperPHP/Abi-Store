<%- include('../layout/navbar') -%>

    <div class="categories">
        <div class="show-image">
            <p class="title">Categories</p>
            <img src="/images/categories.jpg" alt="">
        </div>

        <% for (let i=0; i < category.length; i++) {%>
            <div class="category">
                <div class="cat-bg">
                    <div class="category-label">
                        <div class="cat-img" onclick="window.location.href='/shop/product/get/<%= category[i].products[0].id%>'">
                            <img src="/upload/images/<%= category[i].products[0].image%>" alt="image">
                            <div class="card-details">
                                <p class="title"><%= category[i].products[0].name%></p>
                                <p class="price"><%= category[i].products[0].sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> <span>IQD</span></p>
                            </div>
                        </div>
                        <div class="cat-des">
                            <p class="title"><%= category[i].category.name%></p>
                            <p class="des"><%= category[i].category.des%></p>
                        </div>
                    </div>
                </div>
                <div class="cards">
                    <% for (let j = 1; j < category[i].products.length; j++) {%>
                        <div class="cat-card" onclick="window.location.href='/shop/product/get/<%= category[i].products[j].id%>'">
                            <img src="/upload/images/<%= category[i].products[j].image%>">
                            <div class="card-details">
                                <p class="title"><%= category[i].products[j].name%></p>
                                <p class="price"><%= category[i].products[j].sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> <span>IQD</span></p>
                            </div>
                        </div>
                    <% } %>
                </div>
                <br>
                <center>
                    <button class="view-cat" onclick="window.location.href='/shop/category/<%= category[i].category.name%>'">View Mores</button>
                </center>
            </div>
            <br><br>
            <%} %>
    </div>

    <%- include('../layout/footer') -%>