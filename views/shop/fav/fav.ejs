<%- include('../layout/navbar') -%>
HIDDEN

<div class="fav">
    <% if(user){%>
        <% if(user.fav.length > 0){%>
            <p class="title">Favorites</p>

            <table class="table table-hover table-striped">
                <tbody>
                    <% products.forEach(data => {%>
                        <tr onclick="window.location.href='/shop/product/get/<%= data.id%>'">
                            <td><img src="/upload/images/<%= data.image%>" alt="image"></td>
                            <td class="name"><%= data.name%></td>
                            <td class="size"><%= data.size%></td>
                            <td class="price"><%= data.sell_price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%> <span>IQD</span></td>
                            <td><div class="circle" style="background-color: <%= data.color%>;"></div></td>
                            <td>
                                <form action="/shop/fav/remove/<%= data.id%>?_method=PUT" method="post">
                                    <button class="btn btn-danger"><ion-icon name="remove" class="icon"></ion-icon></button>
                                </form>
                            </td>
                        </tr>
                    <%}) %>
                </tbody>
            </table>
        <%}%>
    <%} else {%>
        <h1 style="margin-top: 130px; text-align: center;">You are not logged in</h1>
    <%} %>    
</div>
<script src="/javascript/active-page-shop.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
